<UserControl
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:PC.Views"
             xmlns:DataAccess="clr-namespace:PC.DataAccess" x:Class="PC.Views.AllPC"
             mc:Ignorable="d" 
             d:DesignHeight="600" d:DesignWidth="800" Loaded="UserControl_Loaded">
    <UserControl.Resources>
        <CollectionViewSource x:Key="pcViewSource" d:DesignSource="{d:DesignInstance {x:Type DataAccess:Pc}, CreateList=True}"/>
    </UserControl.Resources>
    <Grid DataContext="{StaticResource pcViewSource}">

        <DataGrid x:Name="pcDataGrid" RowDetailsVisibilityMode="VisibleWhenSelected" Margin="0,10,0,0" ItemsSource="{Binding}" EnableRowVirtualization="True" AutoGenerateColumns="False" ColumnWidth="*" HorizontalAlignment="Stretch" HorizontalContentAlignment="Stretch">
            <DataGrid.Columns>
                <DataGridTextColumn x:Name="pC_NameColumn" Width="SizeToHeader" Header="Tên" Binding="{Binding PC_Name}"/>
                <DataGridTextColumn x:Name="nVColumn" Width="SizeToHeader" Header="NV" Binding="{Binding NV}"/>
                <DataGridTextColumn x:Name="pBColumn" Width="SizeToHeader" Header="PB" Binding="{Binding PB}"/>
                <DataGridTextColumn x:Name="iPColumn" Width="SizeToHeader" Header="IP" Binding="{Binding IP}"/>
                <DataGridTextColumn x:Name="mACColumn" Width="SizeToHeader" Header="MAC" Binding="{Binding MAC}"/>
                <DataGridTextColumn x:Name="office_LocatedColumn" Width="SizeToHeader" Header="Office Located" Binding="{Binding Office_Located}"/>
                <DataGridTextColumn x:Name="cPUColumn" Width="SizeToHeader" Header="CPU" Binding="{Binding CPU}"/>
                <DataGridTextColumn x:Name="hDDColumn" Width="SizeToHeader" Header="HDD" Binding="{Binding HDD}"/>
                <DataGridTextColumn x:Name="oSColumn" Width="SizeToHeader" Header="OS" Binding="{Binding OS}"/>
                <DataGridTextColumn x:Name="rAMColumn" Width="SizeToHeader" Header="RAM" Binding="{Binding RAM}"/>
                <DataGridTextColumn x:Name="typeColumn" Width="SizeToHeader" Header="Type" Binding="{Binding Type}"/>
            </DataGrid.Columns>
        </DataGrid>

    </Grid>
</UserControl>
